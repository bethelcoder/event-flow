<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Staff Dashboard</title>
  <link rel="stylesheet" href="/styles/footer.css">
  <link rel="stylesheet" href="/styles/staff-dashboard.css">
</head>
<body>

  <!-- Container for the lines and sections -->
  <section class="line-container">

    <!-- Full-height vertical line -->
    <section class="vertical-line"></section>

    <!-- Horizontal line starting from vertical line -->
    <section class="horizontal-line"></section>

    <!-- Alpha: Left of the vertical line -->
    <section class="alpha">
      <!-- Content for alpha goes here -->
    </section>

    <!-- Beta: Top-right space above horizontal line -->
    <section class="beta">
      <!-- Content for beta goes here -->
    </section>

    <!-- Omega: Remaining space (main content) -->
    <section class="omega">
      <!-- Content for omega goes here -->
    </section>

  </section>

  <%- include('partials/footer', { year: new Date().getFullYear() }) %>

</body>
</html>
