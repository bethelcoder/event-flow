<script>
  
  socket.on('newAnnouncement', (a) => {
    const div = document.createElement('div');
    div.className = `announcement ${a.priority}`;
    div.innerHTML = `<strong>${a.title}</strong>: ${a.message}`;

    const container = document.getElementById('announcement-popup');
    container.appendChild(div);

    // auto-remove after 5s
    setTimeout(() => div.remove(), 5000);
  });
    socket.on('ProgramUpdate', (update) => {
    const div = document.createElement('div');
    div.className = `announcement ${update.priority}`;
    div.innerHTML = ` ${update.message}`;
    document.getElementById('announcement-popup').appendChild(div);

    setTimeout(() => {
        div.remove();
    }, 5000);
  });

</script>

