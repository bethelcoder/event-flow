<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="../styles/dashboard.css">
    <link rel="stylesheet" href="../styles/manager_chat.css">
    <title>Chat</title>
</head>
<body>

    <%- include('partials/manager_navigation') %>
    <section class="main_content" id="mainContent">
        <%- include('partials/topbar') %>
        <section class="chat_system">
            <section class="inbox">
                <h4 class="heading">Staff Communication</h4>

                <section class="message_container">
                    <!-- message bubbles -->
                </section>

                <form class="input" id="form" >
                    <input type="text" class="input_message" id="input" autocomplete="off" placeholder="Type your message...">
                    <button type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor" class="icon">
                            <path d="M3.105 2.288a.75.75 0 0 0-.826.95l1.414 4.926A1.5 1.5 0 0 0 5.135 9.25h6.115a.75.75 0 0 1 0 1.5H5.135a1.5 1.5 0 0 0-1.442 1.086l-1.414 4.926a.75.75 0 0 0 .826.95 28.897 28.897 0 0 0 15.293-7.155.75.75 0 0 0 0-1.114A28.897 28.897 0 0 0 3.105 2.288Z" />
                        </svg>
                    </button>
                </form>
            </section>
            <section class="members">
                <h4 class="heading">Staff Members</h4>
                <section class="profile">
                        <section class="icon_frame">
                            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="icon">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M17.982 18.725A7.488 7.488 0 0 0 12 15.75a7.488 7.488 0 0 0-5.982 2.975m11.963 0a9 9 0 1 0-11.963 0m11.963 0A8.966 8.966 0 0 1 12 21a8.966 8.966 0 0 1-5.982-2.275M15 9.75a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                            </svg>
                        </section>
                        <p class="user_name">Mualusi</p>
                        <strong class="user_role">manager</strong>
                        <span class="status"></span>
                    </section>
            </section>
        </section>
    </section>
    <script>
        const user = {
            role : "<%=user.role%>",
            Username : "<%= user.displayName%>",
            _id: "<%=user._id%>"
        }
    </script>
    <script src="../scripts/sidebar.js"></script>
    <script src="https://cdn.socket.io/4.8.1/socket.io.min.js"></script>
    <script src="../scripts/managerSocket.js"></script>
</body>

</html>
