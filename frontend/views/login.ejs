      <form class="login-form">
        <a href="/auth/google" class="auth-btn google">
          <img src="https://www.svgrepo.com/show/355037/google.svg" alt="Google logo" />
          Login with Google
        </a>

      </form>

      <p class="signup-link">
        Don't have an account yet? <a href="/signup">Register here</a>
      </p>

      <section id="animated-text">
        <span>Welcome back! Ready to manage your events effortlessly?</span>
        <span>Secure, fast, and easy to use.</span>
        <span>Join thousands keeping events on track every day.</span>
        
      </section>
    </section>
  </section>
  
  <%- include('partials/footer', { year: new Date().getFullYear() }) %>
